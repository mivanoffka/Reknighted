<UserControl x:Class="Reknighted.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reknighted"
             mc:Ignorable="d" Width="30" Height="30" AllowDrop="True" HorizontalAlignment="Left" VerticalAlignment="Top" MouseDown="UserControl_MouseDown" MouseUp="UserControl_MouseUp" MouseMove="UserControl_MouseMove">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="30">
            <Image.OpacityMask>
                <ImageBrush Stretch="Fill" TileMode="None" ImageSource="/герб сосниопа.png"/>
            </Image.OpacityMask>
        </Image>
        <Ellipse x:Name="indicator" Height="9" VerticalAlignment="Top" Fill="#FFD07B7B" Stroke="#FF9C3333" HorizontalAlignment="Left" Width="9" Margin="20,20,0,0" Visibility="Hidden"/>
    </Grid>
</UserControl>
