<UserControl x:Class="Reknighted.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reknighted"
             mc:Ignorable="d" HorizontalAlignment="Left" VerticalAlignment="Top" Width="465" Height="280">
    <GroupBox Header="Персонаж" Background="#FFE2E2E2" BorderBrush="#FF6B6B6B" HorizontalAlignment="Left" VerticalAlignment="Top" Width="453" Margin="7,0,0,0" Height="270">
        <Grid Height="250" HorizontalAlignment="Left" VerticalAlignment="Top" Width="553">
            <GroupBox x:Name="equipmentGroupBox" Header="Снаряжение" Margin="10,172,0,0" BorderBrush="#FF525252" Background="#FFCECECE" Height="68" VerticalAlignment="Top" HorizontalAlignment="Left" Width="162">
                <Grid x:Name="equipmentGrid" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </GroupBox>
            <GroupBox x:Name="inventoryGroupBox" Header="Инвентарь" Margin="10,0,0,0" BorderBrush="#FF525252" Background="#FFCECECE" Height="170" VerticalAlignment="Top" HorizontalAlignment="Left" Width="423">
                <Grid x:Name="inventoryGrid" Margin="0,-1,0,1"/>
            </GroupBox>
            <GroupBox x:Name="equipmentGroupBox_Copy" Header="Параметры" Margin="177,172,0,0" BorderBrush="#FF525252" Background="#FFCECECE" Height="68" VerticalAlignment="Top" HorizontalAlignment="Left" Width="256">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="199*"/>
                        <ColumnDefinition Width="45*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Здоровье" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,-5,0,0"/>
                    <Label x:Name="healthLabel" Content="0" HorizontalAlignment="Left" Margin="65,-5,0,0" VerticalAlignment="Top" Foreground="#FF25A939"/>
                    <Label Content="Броня" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="143,-5,0,0"/>
                    <Label Content="Урон" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="143,0,0,0"/>
                    <Label x:Name="armorLabel" Content="0" HorizontalAlignment="Left" Margin="8,-5,0,0" VerticalAlignment="Top" Foreground="#FF3A8ECE" Grid.Column="1"/>
                    <Label x:Name="damageLabel" Content="0" HorizontalAlignment="Left" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="#FFCE3A3A" Grid.Column="1"/>
                    <Label Content="Средства" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Label x:Name="balanceLabel" Content="0" HorizontalAlignment="Left" Margin="65,0,0,0" VerticalAlignment="Center" Foreground="#FF6A27E6"/>
                </Grid>
            </GroupBox>
        </Grid>
    </GroupBox>
</UserControl>
