<UserControl x:Class="Reknighted.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reknighted"
             mc:Ignorable="d" HorizontalAlignment="Left" VerticalAlignment="Top" Width="465" Height="280">
    <GroupBox Header="Персонаж" Background="#FFE2E2E2" BorderBrush="#FF6B6B6B" HorizontalAlignment="Left" VerticalAlignment="Top" Width="453" Margin="7,0,0,0" Height="270">
        <Grid Height="250" HorizontalAlignment="Left" VerticalAlignment="Top" Width="553">
            <GroupBox x:Name="equipmentGroupBox" Header="Снаряжение" Margin="10,172,0,0" BorderBrush="#FF525252" Background="#FFCECECE" Height="68" VerticalAlignment="Top" HorizontalAlignment="Left" Width="202">
                <Grid x:Name="equipmentGrid" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </GroupBox>
            <GroupBox x:Name="inventoryGroupBox" Header="Инвентарь" Margin="10,0,0,0" BorderBrush="#FF525252" Background="#FFCECECE" Height="170" VerticalAlignment="Top" HorizontalAlignment="Left" Width="423">
                <Grid x:Name="inventoryGrid" Margin="0,-1,0,1"/>
            </GroupBox>
            <GroupBox x:Name="equipmentGroupBox_Copy" Header="Параметры" Margin="217,172,0,0" BorderBrush="#FF525252" Background="#FFCECECE" Height="68" VerticalAlignment="Top" HorizontalAlignment="Left" Width="216">
                <Grid>
                    <ProgressBar HorizontalAlignment="Left" Height="10" Margin="44,4,0,0" VerticalAlignment="Top" Width="120" Foreground="#FFE0545A" LargeChange="0" Value="107" SnapsToDevicePixels="True"/>
                    <Label Content="HP" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,-5,0,0"/>
                    <ProgressBar HorizontalAlignment="Left" Height="10" Margin="44,0,0,0" VerticalAlignment="Center" Width="120" Foreground="#FF66C56C" LargeChange="0" Value="107" SnapsToDevicePixels="True"/>
                    <Label Content="Броня" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,8,0,0"/>
                    <Label Content="Урон" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,21,0,0"/>
                    <ProgressBar HorizontalAlignment="Left" Height="10" Margin="44,31,0,0" VerticalAlignment="Top" Width="120" Foreground="#FF66A0C5" LargeChange="0" Value="107" SnapsToDevicePixels="True"/>
                </Grid>
            </GroupBox>
        </Grid>
    </GroupBox>
</UserControl>
