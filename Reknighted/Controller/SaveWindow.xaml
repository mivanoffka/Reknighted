<Window x:Class="Reknighted.Controller.SaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reknighted.Controller"
        mc:Ignorable="d"
        Title="Выберите слот..." Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox Name="saveSlots">
            <ListBoxItem Background="LightGray" Selected="Slot_Changed">0</ListBoxItem>
            <ListBoxItem Selected="Slot_Changed">1</ListBoxItem>
            <ListBoxItem Background="LightGray" Selected="Slot_Changed">2</ListBoxItem>
        </ListBox>

    </Grid>
</Window>
