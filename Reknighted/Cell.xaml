<UserControl x:Class="Reknighted.Cell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reknighted"
             mc:Ignorable="d" Width="45" Height="45" HorizontalAlignment="Left" VerticalAlignment="Top" SnapsToDevicePixels="True">
    <Grid MouseMove="Grid_MouseMove">
        <Border x:Name="border" BorderBrush="#FF797979" BorderThickness="1" Width="40" Height="40" Background="#FFE8E8E8" CornerRadius="2,2,2,2"/>
    </Grid>
</UserControl>
